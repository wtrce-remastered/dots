profile external_only {
    output eDP-1 disable
    output DP-1 enable

    exec hyprctl keyword monitor "eDP-1,disable"
    exec hyprctl keyword monitor "DP-1,2560x1440@180,0x0,1.333"
}

profile internal_only {
    output eDP-1 enable
    exec hyprctl keyword monitor "eDP-1,2560x1600@120,0x0,1.6"
}
