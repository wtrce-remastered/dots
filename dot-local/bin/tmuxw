#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    sesionizer_sources=$(xargs echo < "$HOME/.config/tmuxs-sources")
    selected=$(find $sesionizer_sources -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)

if [[ -z $TMUX ]]; then
    echo "Error: must be inside a tmux session"
    exit 1
fi

if tmux list-windows -F '#W' | grep -q "^${selected_name}$"; then
    tmux select-window -t "$selected_name"
else
    tmux new-window -n "$selected_name" -c "$selected"
fi
